            var Email = $("#Email01").val();
            var Address = $("#Address01").val();
            var Pasword = $("#Pasword01").val();
            var status = $("#status01 option:selected").val();
            //end
            var assignaction = 0;
            if (UserID == 0) {
                assignaction = "Save";
            }
            else {
                assignaction = "Update"
            }
            //set value in a object
            var Adminobject = {
                UserID: UserID,
                FirstName: FirstName,
                LastName: LastName,
                ContactNo: ContactNo,
                Email: Email,
                Address: Address,
                Pasword: Pasword,
                status: status,
            }
            //end
            var jsonobject = JSON.stringify(Adminobject);

